{
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "type" : "object",
    "properties": {
      "models": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "model_type": { "type": "string", "enum": ["Text"] },
            "model_kind": { "type": "string" },
            "model_path": { "type": "string" },
            "memory_config": {
              "type": "object",
              "properties": {
                "min_ram_gb": { "type": "number" },
                "recommended_ram_gb": { "type": "number" },
                "gpu_memory_gb": { "type": ["number", "null"] }
              },
              "required": ["min_ram_gb", "recommended_ram_gb"]
            }
          },
          "required": ["name", "model_type", "model_kind", "model_path", "memory_config", "prompt_template", "defaults", "server_config"]
        }
      },
      "prompt_template": {
                "type": "object",
                "properties": {
                "template": { "type": "string" },
                "required_keys": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            },
            "required": ["template", "required_keys"]
      },
      "defaults": {
            "type": "object",
            "properties": {
                "temperature": { "type": "number" },
                "top_p": { "type": "number" },
                "top_k": { "type": "integer" },
                "max_tokens": { "type": "integer" },
                "repetition_penalty": { "type": "number" }
            },
            "required": ["temperature", "top_p", "top_k", "max_tokens", "repetition_penalty"]
      },
     "server_config": {
            "type": "object",
            "properties": {
                "host": { "type": "string" },
                "port": { "type": ["integer", "null"] },
                "ctx_size": { "type": "integer" },
                "gpu_layers": { "type": "integer" },
                "batch_size": { "type": "integer" },
                "num_threads": { "type": ["integer", "null"] },
                "use_mmap": { "type": "boolean" },
                "use_gpu": { "type": "boolean" },
                "extra_args": {
                    "type": "object",
                    "additionalProperties": true
                }
            },
            "required": ["host", "ctx_size", "gpu_layers", "batch_size", "use_mmap", "use_gpu"]
            }
    },
    "required": ["models", "prompt_template", "defaults", "server_config"]
  }